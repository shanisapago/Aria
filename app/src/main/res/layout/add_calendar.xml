<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/topScreenAddCalendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_alignParentTop="true"
        android:background="@color/lightBlue"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/close"></ImageButton>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"></View>

        <ImageButton
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/done"
            android:layout_gravity="center"
            ></ImageButton>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomScreenAddCalendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.90"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.07"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.025"></View>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_field"
                android:hint="Title"
                android:fontFamily="@font/poppins"
                android:textColor="@color/gray"
                android:textSize="30dp"
                android:layout_weight="0.95"
                >

            </EditText>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.025"></View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.025"></View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Starts"
                android:textSize="27dp"
                android:fontFamily="@font/poppins">
            </TextView>

            <TextView
                android:id="@+id/startsTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/rectangle_field"
                android:gravity="center"
                android:text="10:00"
                android:textSize="27dp"
                android:textStyle="bold"></TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.375"></View>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.025"></View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Ends"
                android:textSize="27dp"
                android:fontFamily="@font/poppins">
            </TextView>
            <TextView
                android:id="@+id/endsTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/rectangle_field"
                android:text="11:00"
                android:textStyle="bold"
                android:textSize="27dp"
                android:gravity="center">

            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.375"></View>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.025"></View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Alert"
                android:textSize="27dp"
                android:fontFamily="@font/poppins">
            </TextView>
            <Spinner
                android:id="@+id/alert"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/rectangle_field"
                android:gravity="center">

            </Spinner>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.375"></View>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.164"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.025"></View>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_field"
                android:hint="Notes"
                android:gravity="top"
                android:fontFamily="@font/poppins"
                android:textColor="@color/gray"
                android:textSize="30dp"
                android:maxLength="30"
                android:layout_weight="0.95"
                >

            </EditText>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.025"></View>
        </LinearLayout>





        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"></View>

    </LinearLayout>

</LinearLayout>