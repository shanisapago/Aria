<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"></View>


        <LinearLayout
            android:id="@+id/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:background="@drawable/white_background"
            android:backgroundTint="@color/whiteBackground"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/username" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cinzel"
                    android:shadowColor="@color/white"
                    android:shadowDx="4"
                    android:shadowDy="1.5"
                    android:shadowRadius="1"
                    android:textSize="18dp"
                    android:text="Username"
                    android:textColor="@color/blueText"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/usernameSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:layout_gravity="top"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wrong"

                    android:visibility="invisible"
                    android:gravity="center"
                    android:id="@+id/wrongUsername"
                    >

                </ImageView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05">

                </View>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wrongUsername2"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/usernameTextWrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="your username already taken, enter new username"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textColor="@color/RedWarning">
                </TextView>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03">
            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:paddingLeft="15dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:rotation="-20"
                    app:srcCompat="@drawable/password" />

                <TextView
                    android:id="@+id/passwordSigninText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cinzel"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:shadowDx="4"
                    android:shadowDy="1.5"
                    android:text="Password"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:textColor="@color/blueText"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_weight="0.95"
                    android:layout_width="0dp"
                    android:importantForAutofill="no"
                    android:textColor="@color/black"
                    android:id="@+id/passwordSignin"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wrong"

                    android:gravity="center"
                    android:id="@+id/wrongPass"
                    android:visibility="invisible">
                </ImageView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05">

                </View>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wrongPass2"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="enter at least 8 characters"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textColor="@color/RedWarning">
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:paddingLeft="15dp">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/confirmpassword" />

                <TextView
                    android:id="@+id/confirm"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cinzel"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:shadowDx="4"
                    android:shadowDy="1.5"
                    android:text="Confirm Password"
                    android:textSize="18dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/blueText"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="15dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:importantForAutofill="no"
                    android:textColor="@color/black"
                    android:id="@+id/confirmSignin"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wrong"

                    android:visibility="invisible"
                    android:gravity="center"
                    android:id="@+id/wrongConfirm"
                    >

                </ImageView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05">

                </View>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wrongConfirm2"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wrong confirming"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textColor="@color/RedWarning">
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:paddingLeft="15dp">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cinzel"
                    android:shadowColor="@color/white"
                    android:shadowRadius="1"
                    android:shadowDx="4"
                    android:shadowDy="1.5"
                    android:text="Phone Number"
                    android:textSize="18dp"
                    android:textColor="@color/blueText"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="+972"
                    android:fontFamily="@font/poppins"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:textSize="14dp"

                    android:paddingBottom="15dp">
                </TextView>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:importantForAutofill="no"
                    android:textColor="@color/black"
                    android:id="@+id/phoneSubmit"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins"
                    />
                <ImageView
                    android:id="@+id/wrongPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wrong"
                    android:gravity="center"
                    android:visibility="invisible">
                </ImageView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05">

                </View>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/wrongPhone2"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wrong phone format"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textColor="@color/RedWarning">
                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.23"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/button"
                    android:fontFamily="@font/cinzel"
                    android:shadowColor="@color/white"
                    android:shadowDx="5"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="REGISTER"
                    android:textSize="18dp"
                    android:textColor="@color/blueText"
                    app:strokeColor="@color/blueText"
                    app:strokeWidth="4px"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/barlow"
                        android:layout_height="wrap_content"
                        android:text="Already registered? "
                        android:textSize="14dp"
                        android:textColor="@color/blueText" />

                    <TextView
                        android:id="@+id/clickHereLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log in"
                        android:textSize="14dp"
                        android:fontFamily="@font/barlow"
                        android:textColor="@color/blueText" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05">
            </View>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.14">
        </View>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aria_signin"
            android:layout_gravity="center">
        </ImageView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">
        </View>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>