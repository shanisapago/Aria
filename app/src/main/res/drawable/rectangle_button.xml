<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Shadow color -->
            <corners android:radius="3dp"/> <!-- Adjust corner radius to match your style -->
        </shape>
    </item>
    <!-- Button face -->
    <item android:bottom="2dp" android:right="2dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grayRectangleField2"/> <!-- Button color -->
            <corners android:radius="3dp"/>
        </shape>
    </item>
</layer-list>
